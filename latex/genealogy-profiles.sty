\cs_new:Nn \gpr_add_to_named_index:nnN {
	\index[#1]{
		#2
		\bool_if:nT { #3 && !\tl_if_blank_p:V \l__gpr_main_index_entry_style_tl }
			{ | \tl_use:N \l__gpr_main_index_entry_style_tl }
