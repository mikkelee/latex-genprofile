\prg_new_protected_conditional:Nnn \gpr_if_lifespan_defined: {T,F,TF}
{
	\bool_if:nTF {
		 ( \cs_if_exist_p:c { gtrDBbirthyear }
		|| \cs_if_exist_p:c { gtrDBbaptismyear } )
		&&
		 ( \cs_if_exist_p:c { gtrDBdeathyear }
		|| \cs_if_exist_p:c { gtrDBburialyear } )
	} {
		\prg_return_true:
	} {
		\prg_return_false:
	}
}

