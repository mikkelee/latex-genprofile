%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Key setup
% 

\keys_define:nn { genealogy-profiles }
{
	name~part~order				.code:n			= {
			\seq_gset_from_clist:Nn \g__gp_name_part_order_seq {#1}
		} ,
%	name part formatting
}

% set some defaults
\keys_set:nn { genealogy-profiles } {
	name~part~order = { given_name, patronymic, byname } ,
}

\keys_define:nn { genealogy-profiles / profile }
{
	id							.tl_set:N		= \l__gp_id_tl ,
%	fullname?
	given~name					.tl_set:N		= \l__gp_given_name_tl ,
	patronymic					.tl_set:N		= \l__gp_patronymic_tl ,
	surname						.tl_set:N		= \l__gp_surname_tl ,
	byname						.tl_set:N		= \l__gp_byname_tl ,
	name~parts					.code:n			= {
			\seq_set_from_clist:Nn \l_tmpa_seq {#1}
			\tl_clear_new:N \l__gp_tmpid_tl
			\seq_map_indexed_inline:Nn \g__gp_name_part_order_seq {
				\tl_set:ce { l__gp_##2_tl } { \seq_item:Nn \l_tmpa_seq {##1} } 

				% build id
				\tl_if_empty:cTF { l__gp_##2_tl } {
					\tl_put_right:Ne \l__gp_tmpid_tl { x }
				} {
					\tl_put_right:Ne \l__gp_tmpid_tl { \tl_item:cn { l__gp_##2_tl } {1} }
				}
			}

			% set id unless already defined
			\tl_if_empty:NT \l__gp_id_tl {
				\tl_clear_new:N \l__gp_generated_id_tl
				\gp_generate_unique_id:Ne \l__gp_generated_id_tl {\l__gp_tmpid_tl}
				\seq_gput_right:Ne \g__gp_used_profile_ids_seq \l__gp_generated_id_tl
				\tl_set_eq:NN \l__gp_id_tl \l__gp_generated_id_tl
			}
		} ,

%	vital data / genealogytree
}

\NewDocumentCommand { \gpKeys } { m } {
	\keys_set:nn { genealogy-profiles } { #1 }
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Formatting
% 

\seq_clear_new:N \g__gp_used_profile_ids_seq
\bool_new:N \l__gp_id_exists_bool

\cs_new_protected:Nn \gp_generate_unique_id:Nn
{
	\int_zero_new:N \l__gp_id_index_int

	\bool_set_false:N \l__gp_id_exists_bool
	\bool_do_until:nn { ! \l__gp_id_exists_bool } {
		\int_incr:N \l__gp_id_index_int
		\seq_if_in:NeTF \g__gp_used_profile_ids_seq { #2 \int_use:N \l__gp_id_index_int }
			{ \bool_set_true:N \l__gp_id_exists_bool }
			{ \bool_set_false:N \l__gp_id_exists_bool }
	}

	\tl_set:Ne #1 { #2 \int_use:N \l__gp_id_index_int }
}
\cs_generate_variant:Nn \gp_generate_unique_id:Nn {
	Ne
}


\cs_new_protected:Nn \gp_format_name:N
{
	\seq_clear_new:N \l__gp_formatted_name_seq

	% TODO
	\seq_put_right:Nn \l__gp_formatted_name_seq { \l__gp_given_name_tl }
	\seq_put_right:Nn \l__gp_formatted_name_seq { \textit{ \l__gp_patronymic_tl } }
	\seq_put_right:Nn \l__gp_formatted_name_seq { \textsc{ \l__gp_byname_tl } }

	\tl_set:Nn #1 { \seq_use:Nn \l__gp_formatted_name_seq {~} }
}

