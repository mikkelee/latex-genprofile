% TODO starred with just name parts
\NewDocumentEnvironment { genProfile } { O{} } {
	\group_begin:
		\keys_set:nn { genealogy-profiles / profile } { #1 }
		\label{ genProfile:\tl_use:N \l__gp_id_tl }
		\tl_clear_new:N \l__gp_formatted_name_tl
		\gp_format_name:N \l__gp_formatted_name_tl
		\tl_use:N \l__gp_formatted_name_tl \hfill [\tl_use:N \l__gp_id_tl] \par
	\group_end:
}{\par}

